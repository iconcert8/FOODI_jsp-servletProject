<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>

 	<typeAliases> 
 		<typeAlias type="me.foodi.domain.UserInfoVO" alias="UserInfoVO"/>
 	</typeAliases> 
	
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC"/>
			<dataSource type="POOLED">
				<property name="driver" value="oracle.jdbc.driver.OracleDriver"/>
				<property name="url" value="jdbc:oracle:thin:@localhost:1521:XE"/>
				<property name="username" value="foodi"/>
				<property name="password" value="1234"/>
<!--			
				<dataSource type="JNDI">
				<property name="data_source" value="java:comp/env/jdbc/oracle"/> 
-->
			</dataSource>
		</environment>		
	</environments>
	
	<mappers>
<!-- 	예시 <mapper resource="me/foodi/persistence/board.xml"/> -->
 		<mapper resource="me/foodi/persistence/search.xml"/>
 		<mapper resource="me/foodi/persistence/UserInfoMapper.xml"/> 
	</mappers>
	
</configuration>
